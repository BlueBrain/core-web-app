{
  "extends": ["airbnb", "airbnb-typescript", "next", "next/core-web-vitals", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["**/*.js", "**/*.jsx"],
  "rules": {
    "react/require-default-props": "off",
    "import/order": [
      "error",
      {
        "pathGroups": [
          {
            "pattern": "**/*.+(css|scss|less)",
            "patternOptions": { "dot": true, "nocomment": true },
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "{.,..}/**/*.+(css|scss|less)",
            "patternOptions": { "dot": true, "nocomment": true },
            "group": "unknown",
            "position": "after"
          }
        ]
      }
    ]
  }
}
